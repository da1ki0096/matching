%p#notice= notice
%h1 Groups
%table
  %thead
    %tr
      %th{:colspan => "3"}
  %tbody
    - @groups.each do |group|
      %tr
        %td= group.name
        %td= link_to 'Show', group
        %td= link_to 'Edit', edit_group_path(group)
        %td= link_to 'Destroy', group, method: :delete, data: { confirm: 'Are you sure?' }
        - unless @groupids.include?(group.id)
          %td= link_to 'join', join_group_path(group), method: :push
%br/
= link_to 'New Group', new_group_path
